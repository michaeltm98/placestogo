
<% include partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=place.name%></div>
    <form class="ui form" action="/places/<%= place._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="place[name]" id="name" value="<%=place.name%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="place[image]" id="image" value="<%= place.image %>" required>
        </div>
        <div class="field">
            <label>Description</label>
            <input type="text" name="place[description]" id="description" value="<%= place.description %>" required>
        </div>
        <div class="form-group">
                <button class="ui green basic button">Submit!</button>
            </div>

    </form>
</div>


<div class="container text-align">

        <h1 class="center text-center" id="namemirror" style="padding: 30px"><%=place.name%></h1>
        <div class="center text-center justify-content-center" style="display:flex; flex-wrap: wrap">
            <div style="display: flex;" class="justify-content-center">
                
                <div class="thumbnail">
                    <img src="<%= place.image %>" id="imagemirror" alt="">
                    <p id="descriptionmirror" style="padding: 10px"><%=place.description%></p>
                </div>
            </div>
        </div>

</div>
<% include partials/footer %>
